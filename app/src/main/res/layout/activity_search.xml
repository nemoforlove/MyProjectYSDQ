<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gpf.myprojectysdq.view.activity.SearchActivity">

    <LinearLayout
        android:id="@+id/searchTab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/searchBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/searchEdit"
                android:layout_width="220dp"
                android:layout_height="27dp"
                android:background="@drawable/search_concer"
                android:textSize="15sp"
                android:padding="5dp"

                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_gravity="center_vertical"
                android:hint="请输入片名或者主演名"
                />
            <ImageView
                android:id="@+id/searchClear"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:src="@mipmap/ys_ic_search_del"
                android:background="@drawable/search_concer1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/searchSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/abc_ic_search_api_mtrl_alpha"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/searchHistosy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索记录"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/searchDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ly_ic_shanchu"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/searchListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5e7d2"
        android:visibility="gone"></ListView>

</LinearLayout>

